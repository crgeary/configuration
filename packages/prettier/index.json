{
    "$schema": "http://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.{yml,yaml,tf}",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ]
}
